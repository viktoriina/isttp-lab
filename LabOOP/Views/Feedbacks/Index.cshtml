@model IEnumerable<LabOOP.Models.Feedback>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h1 class="mb-4">Comments</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <a href="@Url.Action("Create", new { orderId = ViewBag.orderId })" class="btn btn-primary mb-3">Create New</a>
        </div>
        <div class="col-md-12">
            <a href="@Url.Action("Index", "Orders")" class="btn btn-sm btn-info btn mb-2">List Orders</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>  @Html.DisplayNameFor(model => model.DateOfPublication)</th>
                            <th> @Html.DisplayNameFor(model => model.Description)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.DateOfPublication)</td>
                                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                <td>
                                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-info btn">Details</a>
                                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
