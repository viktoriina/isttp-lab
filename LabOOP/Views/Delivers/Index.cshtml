@model IEnumerable<LabOOP.Models.Deliver>

@{
    ViewData["Title"] = "Index";
}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h1 class="mb-4">Deliveries</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <a href="@Url.Action("Create")" class="btn btn-primary mb-3">Create New</a>
        </div>
    </div>
    <div class="row">
       <div class="col-md-12">
          <div class="table-responsive">
               <table class="table table-striped table-bordered">
                   <thead>
                       <tr>
                           <th> @Html.DisplayNameFor(model => model.PhoneNumber)</th>
                           <th> @Html.DisplayNameFor(model => model.TransportId)</th>
                           <th> @Html.DisplayNameFor(model => model.Name)</th>
                           <th> @Html.DisplayNameFor(model => model.Surname)</th>
                       </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                  <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                                  <td>@Html.DisplayFor(modelItem => item.Transport.Name)</td>
                                  <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                  <td>@Html.DisplayFor(modelItem => item.Surname)</td>
                                <td>
                                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-success">Edit</a>
                                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-info btn">Details</a>
                                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-danger">Delete</a>
                               </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

